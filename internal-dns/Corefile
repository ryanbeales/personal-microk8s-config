home.ryanbeales.com:53 {
    file /coredns-config/home.db
    log
    errors
}

# Add mdns resolver
local:53 {
    mdns local
    log
    errors
    cache
}

# Resolve only home.ryanbeales.com addresses, this is not a forwarding server.
.:53 {
    log
    errors
    cache
    forward . /etc/resolv.conf
}